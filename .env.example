# Configuration de l'application Recette FR/JP
# Copier ce fichier en .env et adapter les valeurs

# Environnement (dev ou prod)
ENV=dev

# Mode debug (True pour dev, False pour prod)
DEBUG=True

# Serveur
HOST=127.0.0.1
PORT=8000
WORKERS=1

# Sécurité
SECRET_KEY=your-secret-key-here-generate-with-openssl-rand-base64-32
REQUIRE_PASSWORD=False
SHARED_PASSWORD=your-password-here

# API Groq pour traduction/conversion
GROQ_API_KEY=your-groq-api-key-here

# APIs de prix (optionnelles - pour recherche automatique de prix)
# Rakuten (Japon) - Inscription gratuite sur https://webservice.rakuten.co.jp/app/create
RAKUTEN_APP_ID=your-rakuten-app-id-here

# Logs
LOG_LEVEL=debug
LOG_PATH=logs/recette.log
